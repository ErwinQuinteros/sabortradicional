---
import { menuMain } from "~/data/menus";
const currentYear = new Date().getFullYear();
import { siteName } from "~/data/config";
---

<footer class="bg-brand-green text-white">
	<div class="container pt-16 pb-8">
		<div class="flex justify-center">
			<a href="">
				<img src="/sabor-tradicional.png" alt="" class="max-w-40">
			</a>
		</div>
		<nav class="flex flex-col sm:flex-row items-center justify-center gap-x-12 gap-y-3 font-medium mt-6" aria-label="Footer">
			{
				menuMain.map((item) => (
					<a href={item.url} class="hover:underline">
						{item.name}
					</a>
				))
			}
		</nav>
		<p class="mt-10 text-center text-sm">&copy; {currentYear} {siteName}. Todos los derechos reservados. <a class="underline" href="/privacy-policy">Pol√≠ticas de privacidad</a></p>
	</div>
</footer>
